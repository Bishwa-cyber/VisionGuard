<%layout("/layouts/boilerplate.ejs")%>
<body>
    <div class = "log">
        <form method = "post" action="/signup" class = "forms" novalidate class="needs-validation">
            <h3>Connect With Us</h3>
           <div class = "signupunder">
            <label for = "username" class = "form-label k">Username : </label>
            <input type = "text" name = "username" class = "form-control k" id = "username" placeholder="enter your username" required/>
                <div class = "valid-feedback">
                    username look's good
                </div>
                <div class = "invalid-feedback">
                    enter a valid username
                </div>
            <label for = "email" class = "form-label k">Email : </label>
            <input type = "email" name = "email" class = "form-control k" id = "email" placeholder="enter your mail-id" required/>
            <div class = "valid-feedback">
                email look's good
            </div>
            <div class = "invalid-feedback">
                enter a valid email
            </div>
            <label for = "password" class = "form-label k">Password : </label>
            <input type = "text" name = "password" class = "form-control k" id = "password" placeholder="enter your password" required/>
            
            <div class = "valid-feedback">
                Password will be secured
            </div>
            <div class = "invalid-feedback">
                give a better password
            </div><button type = "submit" class = "btna btn btn-dark"><b>Connect</b></button>
            <p style = "font-size: 15px;">already have an account? <a style = "text-decoration: none;" href = "/login">login</a></p>
           </div>
        </form>
    </div>
</body>